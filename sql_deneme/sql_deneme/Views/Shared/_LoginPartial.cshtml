@if (User.Identity.IsAuthenticated)
{
    <div class="navbar-collapse collapse">
        <ul class="navbar-nav ml-auto">
            @await Html.PartialAsync("_LoginPartial")
        </ul>
    </div>

    <ul class="navbar-nav">
        <li class="nav-item">
            <span class="nav-link">Hoşgeldiniz, @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Context.Request.Path" method="post" id="logoutForm">
                <button type="submit" class="nav-link btn btn-link">Çıkış Yap</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Oturum Aç</a>
        </li>
    </ul>
}
